<h1 class="text-center">New Message</h1>

<% if @message.errors.any? %>
  <p>Something went wrong</p>
  <ul>
    <% @message.errors.full_messages.each do |message| %>
      <li> <%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for @message do |f| %>
      <%= render 'contact-select' %>
      <br>
      <%= link_to "Add Another Contact", new_message_path, class: 'btn btn-default', remote: true, id: 'new-contact' %><br><br>

      <%= f.label :from %>
      <%= f.text_field :from, class: 'form-control', value: '5309245645' %>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: '3' %>
      <%= f.text_field :user_id, type: 'hidden', value: current_user.id %><br>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
